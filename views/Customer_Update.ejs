<%- include('Header'); -%>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/update/<%= data.MaKH %>" method="POST">
          <div class="form-group">
            <input type="text" name="TenKH" value="<%= data.TenKH%>" placeholder="Tên Khách Hàng" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="DiaChi" value="<%= data.DiaChi%>" placeholder="Địa Chỉ" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="SoDT" value="<%= data.SoDT%>" placeholder="Số Điện Thoại" class="form-control">
          </div>
          <button type="submit" class="btn">
            Lưu
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('Footer'); -%>
